---
const {imagen, ref} = Astro.props;
---


<div class="button-container">
    <a href={ref} class="expanding-button ">
      <img src={imagen} alt="imagenes guias" class=" img max-w-100% rounded-2xl "/>
      
    </a>
  </div>

  <style>
.expanding-button {
  background-color: rgb(14, 210, 245);
  
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  
  cursor: pointer;
  border-radius: 16px;
  transition: all 0.3s ease;
}

.expanding-button:hover {
  transform: scale(1.1);
  box-shadow: 0 0 12px rgb(14, 210, 245) ,
     0 0 5px rgb(14, 210, 245) , 
     0 0 6px rgb(14, 210, 245) ;

}

.img{
  transition: all 0.3s ease;
  opacity: 0.9;
}


.button-container {
  text-align: center;
  margin-left: 30px;
  margin-top: 80px;
  
  
}




  </style>