---
const { value } = Astro.props;
---

<div>
    <button class="btn" type="submit">{value}</button>
</div>

<style>
    .btn {
        width: 100%;
        padding: 10px;
        background: linear-gradient(to bottom right, #ff191d, #9a0000);
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 200ms;
    }

    .btn:hover {
        border: 1px solid#ffffff;
        color: #ffffff;
        background: none;
        box-shadow:
            0 0 10px rgba(255, 255, 255, 1),
            0 0 10px rgba(255, 255, 255, 1),
            0 0 10px rgba(255, 255, 255, 1);

        transition: all 300ms;
    }
</style>
