---
const {value, id} = Astro.props
---

<div >
    <button class="buton" type="submit"  id={id}>{value}</button>
</div>



<style>
.buton{
  background:linear-gradient(to bottom right, rgb(30 58 138), rgb(23 37 84));
  width: 200px;
  padding: 8px;
  text-decoration: none;
  text-align: center;
  color: #fff;
  border-radius: 7px;
  border: none;
  border: 1px solid rgb(30 58 138);
  cursor: pointer;
  transition: all 300ms;
 margin-left: 150px;
  
}
.buton:hover{
  border: 1px solid rgb(30 58 138);
  color: rgb(30 58 138);
  background: none;
  
}


</style>